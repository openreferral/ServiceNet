<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity HolidaySchedule.
    -->
    <changeSet id="20181119125404-1" author="jhipster">
        <createTable tableName="holiday_schedule">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="closed" type="boolean">
                <constraints nullable="false"/>
            </column>

            <column name="opens_at" type="varchar(255)">
                <constraints nullable="true"/>
            </column>

            <column name="closes_at" type="varchar(255)">
                <constraints nullable="true"/>
            </column>

            <column name="start_date" type="date">
                <constraints nullable="false"/>
            </column>

            <column name="end_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="srvc_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_holiday_schedule_srvc_id"/>
            </column>
            <column name="location_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_holiday_schedule_location_id"/>
            </column>
            <column name="service_atlocation_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_holiday_schedule_service_atlocation_id"/>
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
