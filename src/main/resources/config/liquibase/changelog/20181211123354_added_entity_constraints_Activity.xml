<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Activity.
    -->
    <changeSet id="20181211123354-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="activity"
                                 constraintName="fk_activity_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>

        <addForeignKeyConstraint baseColumnNames="activities_id"
                                 baseTableName="activity_reviewers"
                                 constraintName="fk_activity_reviewers_activities_id"
                                 referencedColumnNames="id"
                                 referencedTableName="activity"/>
        <addForeignKeyConstraint baseColumnNames="reviewers_id"
                                 baseTableName="activity_reviewers"
                                 constraintName="fk_activity_reviewers_reviewers_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>
        
        <addForeignKeyConstraint baseColumnNames="metadata_id"
                                 baseTableName="activity"
                                 constraintName="fk_activity_metadata_id"
                                 referencedColumnNames="id"
                                 referencedTableName="metadata"/>

        <addForeignKeyConstraint baseColumnNames="organization_id"
                                 baseTableName="activity"
                                 constraintName="fk_activity_organization_id"
                                 referencedColumnNames="id"
                                 referencedTableName="organization"/>

    </changeSet>
</databaseChangeLog>
